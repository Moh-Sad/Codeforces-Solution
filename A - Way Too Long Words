n = int(input())
words = []
for i in range(n):
    word = input()
    words.append(word)
for i in range(n):
    if(len(words[i]) > 10):
       print (words[i][0] + str((len(words[i])-2)) + words[i][-1])
 
    else:
        print(words[i])
